<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/edit_credentials"
    tools:context=".EditCredentials"
    android:background="#252d3d">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="damson.suites.suites.EditCredentials">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <EditText
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_column="0"
            android:hint="New Name"
            android:id="@+id/text_name_change"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_span="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Name"
            android:id="@+id/button_name_change"
            android:layout_column="1"
            android:background="#FFFFFF"
            android:textColor="#000000" />

        <Space
            android:layout_width="20px"
            android:layout_height="40dp" />

        <EditText
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/text_email_change"
            android:layout_column="1"
            android:hint="New Email"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_width="match_parent" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Change Email"
            android:id="@+id/button_email_change"
            android:layout_column="1"
            android:background="#FFFFFF"
            android:textColor="#000000" />

        <Space
            android:layout_width="20px"
            android:layout_height="40dp" />

        <EditText
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/text1_password_change"
            android:layout_column="0"
            android:hint="Enter New Password"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_span="2" />

        <EditText
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/text2_password_change"
            android:layout_column="0"
            android:hint="New Password Again"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/button_password_change"
            android:layout_column="1"
            android:background="#FFFFFF"
            android:textColor="#000000" />

    </TableLayout>

</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>